@inject NavigationManager _navigationManager

<nav class="flex flex-wrap items-center justify-between w-full py-4 md:py-2 px-4 blazor-bg">
    <div>
        <a href="#" class="text-white flex items-center space-x-2 px-4">
            <span class="text-2xl font-extrabold">@LogoTitle</span>
        </a>
    </div>
    <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
        <ul class="pt-4 text-base text-gray-700 md:flex md:justify-between md:pt-0">
            <li>
                <a href="#" @onclick="@(() => NavTo("https://www.github.com"))" class="flex items-center space-x-3 p-2 rounded-md hover:bg-indigo-500 text-white">
                    <span class="fas fa-cat"></span>
                    <span>Github</span>
                </a>
            </li>
            <li>
                <a href="#" @onclick="@(() => NavTo("/about"))" class="flex items-center space-x-3 p-2 rounded-md hover:bg-indigo-500 text-white">
                    <span class="fas fa-dog"></span>
                    <span>About</span>
                </a>
            </li>
        </ul>
    </div>
</nav>
