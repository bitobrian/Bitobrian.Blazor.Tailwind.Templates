<!-- sidebar -->
<div class="sidebar blazor-bg p-3 shadow-lg">
    <ul class="space-y-2 text-sm">
        <li>
            <a href="#" @onclick="@(() => NavTo("/"))" class="flex items-center space-x-3 p-2 rounded-md hover:bg-indigo-500 text-white">
                <span class="fas fa-house"></span>
                <span>Home</span>
            </a>
        </li>
        <li>
            <a href="#" @onclick="@(() => NavTo("/counter"))" class="flex items-center space-x-3 p-2 rounded-md hover:bg-indigo-500 text-white">
                <span class="fas fa-calculator"></span>
                <span>Counter</span>
            </a>
        </li>
        <li>
            <a href="#" @onclick="@(() => NavTo("/fetchdata"))" class="flex items-center space-x-3 p-2 rounded-md hover:bg-indigo-500 text-white">
                <span class="fas fa-database"></span>
                <span>Fetch Data</span>
            </a>
        </li>
    </ul>
</div>

@code {

    string LogoTitle = "BitoTailwindBlazor";

    void NavTo(string page)
    {
        _navigationManager.NavigateTo(page);
    }

}